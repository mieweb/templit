{
  "name": "templit",
  "version": "0.1.0",
  "description": "Template rendering engine with frontmatter support â€” Handlebars, Mustache, and Liquid",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev:lib": "tsup --watch",
    "dev:web": "npm run dev --workspace=web",
    "dev": "npm run dev:web",
    "typecheck": "tsc --noEmit"
  },
  "workspaces": [
    "web"
  ],
  "dependencies": {
    "gray-matter": "4.0.3",
    "handlebars": "4.7.8",
    "js-yaml": "4.1.0",
    "liquidjs": "10.21.1",
    "marked": "16.3.0",
    "mustache": "4.2.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4",
    "@types/mustache": "^4",
    "tsup": "^8",
    "typescript": "^5"
  },
  "keywords": [
    "template",
    "rendering",
    "handlebars",
    "mustache",
    "liquid",
    "frontmatter",
    "markdown"
  ],
  "license": "MIT"
}
